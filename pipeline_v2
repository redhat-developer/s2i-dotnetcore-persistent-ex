pipeline {
   agent any

   stages {
      stage('Install the .NET Core image streams in Test Project') {
         steps {
            sh "oc create -f https://raw.githubusercontent.com/redhat-developer/s2i-dotnetcore/master/dotnet_imagestreams_rhel8.json -n test"
            sleep 4
         }
      }
      stage('Deploy Dot Net App in Test Env') {
         steps {
            sh "oc new-app dotnet:3.1~https://github.com/indiasafsicommunity/s2i-dotnetcore-persistent-ex#dotnetcore-3.1 --context-dir app -n test"
         }
      }
      stage('Deploy Postgres DB in Test Env') {
         steps {
            sh "oc new-app postgresql-ephemeral -n test"
         }
      }
      stage('Set Postgres credentials for dot net app in Test Env') {
         steps {
            sh "oc set env dc/s2i-dotnetcore-persistent-ex --from=secret/postgresql -e database-service=postgresql -n test"
         }
      }
      stage('Expose the service for dot net app in Test Env') {
         steps {
            sh "oc expose service s2i-dotnetcore-persistent-ex -n test"
         }
      }
      stage('Approve or Reject') {
         steps {
            input 'Approve?'
         }
      }
      stage('Install the .NET Core image streams in Production Project') {
         steps {
            sh "oc create -f https://raw.githubusercontent.com/redhat-developer/s2i-dotnetcore/master/dotnet_imagestreams_rhel8.json -n prod"
            sleep 4
         }
      }
      stage('Deploy Dot Net App in Prod Env') {
         steps {
            sh "oc new-app dotnet:3.1~https://github.com/indiasafsicommunity/s2i-dotnetcore-persistent-ex#dotnetcore-3.1 --context-dir app -n prod"
         }
      }
      stage('Deploy Postgres DB in Prod Env') {
         steps {
            sh "oc new-app postgresql-ephemeral -n prod"
         }
      }
      stage('Set Postgres credentials for dot net app in Prod Env') {
         steps {
            sh "oc set env dc/s2i-dotnetcore-persistent-ex --from=secret/postgresql -e database-service=postgresql -n prod"
         }
      }
      stage('Expose the service for dot net app in Prod Env') {
         steps {
            sh "oc expose service s2i-dotnetcore-persistent-ex -n prod"
         }
      }
   }
}
